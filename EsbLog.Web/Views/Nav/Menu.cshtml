@model IEnumerable<EsbLog.Web.Models.NavViewModel>

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("统一日志管理平台", "Index", "Home", null, new { @class = "navbar-brand" })
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @foreach (var item in Model)
                {
                    if (ViewBag.SelectedNav== item.ControllerName)
                    {
                        <li class="active">@Html.ActionLink(item.NavName, "Index", item.ControllerName)</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink(item.NavName, "Index", item.ControllerName)</li>
                    }                    
                }
                
            </ul>
            <ul class="nav navbar-nav navbar-right">                
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        欢迎您，@ViewBag.UserName <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li role="separator" class="divider"></li>
                        <li>@Html.ActionLink("注销","Logout","Home")</li>
                        
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</div>