<?xml version="1.0" encoding="utf-8"?>
<log4net>
  <!-- 异常日志文件 -->
  <appender name="ErrorRollingFile" type="log4net.Appender.RollingFileAppender">
    <file value="log/esblog.api.error_" />
    <appendToFile value="true" />
    <rollingStyle value="Composite" />
    <datePattern value="yyyyMMdd" />
    <maxSizeRollBackups value="10" />
    <maximumFileSize value="1MB" />
    <staticLogFileName value="false" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="【%-5level|%logger】：%date %thread - %message%newline" />
    </layout>
  </appender>

  <!-- 普通日志文件 -->
  <appender name="LogRollingFile" type="log4net.Appender.RollingFileAppender">
    <file value="log/esblog.api_" />
    <appendToFile value="true" />
    <rollingStyle value="Composite" />
    <datePattern value="yyyyMMdd" />
    <maxSizeRollBackups value="10" />
    <maximumFileSize value="1MB" />
    <staticLogFileName value="false" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="【%-5level|%logger】：%date %thread - %message%newline" />
    </layout>
  </appender>

  <root>
    <level value="DEBUG" />
  </root>

  <!-- 日志公共方法 -->
  <logger name="EsbLog.Api.Log">
    <level value="DEBUG" />
    <appender-ref ref="LogRollingFile" />
  </logger>

  <!-- 异常日志 -->
  <logger name="EsbLog.Api.Error">
    <level value="ERROR" />
    <appender-ref ref="ErrorRollingFile" />
  </logger>
</log4net>  